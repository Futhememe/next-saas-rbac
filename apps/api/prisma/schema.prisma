generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String?  @map("password_hash")
  avatarUrl    String?  @map("avatar_url")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Token {
  id String @id @default(uuid())

  @@map("tokens")
}

model Account {
  id String @id @default(uuid())

  @@map("accounts")
}

model Invite {
  id String @id @default(uuid())

  @@map("invites")
}

model Member {
  id String @id @default(uuid())

  @@map("members")
}

model Organization {
  id String @id @default(uuid())

  @@map("organizations")
}

model Project {
  id String @id @default(uuid())

  @@map("projects")
}
